<?xml version="1.0" encoding="UTF-8"?>
<!--
  AI-Box Maven settings
  Routes all Maven artifact downloads through Nexus mirrors.
  Direct access to Maven Central and Gradle Plugin Portal is blocked by network policy.
-->
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0
                              https://maven.apache.org/xsd/settings-1.2.0.xsd">

  <mirrors>
    <mirror>
      <id>nexus-central</id>
      <name>Nexus mirror of Maven Central</name>
      <url>https://nexus.internal/repository/maven-central/</url>
      <mirrorOf>*</mirrorOf>
    </mirror>
    <mirror>
      <id>nexus-gradle-plugins</id>
      <name>Nexus mirror of Gradle Plugin Portal</name>
      <url>https://nexus.internal/repository/gradle-plugins/</url>
      <mirrorOf>gradlePlugins</mirrorOf>
    </mirror>
  </mirrors>

  <profiles>
    <profile>
      <id>nexus</id>
      <repositories>
        <repository>
          <id>nexus-central</id>
          <url>https://nexus.internal/repository/maven-central/</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>nexus-central</id>
          <url>https://nexus.internal/repository/maven-central/</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>nexus</activeProfile>
  </activeProfiles>

</settings>

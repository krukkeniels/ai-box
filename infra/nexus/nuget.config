<?xml version="1.0" encoding="utf-8"?>
<!--
  AI-Box NuGet Configuration Template

  Pre-configured to use the Nexus repository mirror. All package restores
  will be served from the internal proxy, avoiding direct access to nuget.org.

  Usage:
    1. Copy this file to your solution root as NuGet.Config
    2. Adjust the nexus URL if your Nexus instance is at a different address
    3. Run: dotnet restore

  For use inside AI-Box containers the URL should be:
    https://nexus.internal/repository/nuget-group/index.json

  For use from developer machines outside the container network, use the
  host-accessible URL (e.g., https://nexus.example.com:8081/repository/nuget-group/index.json).
-->
<configuration>
  <packageSources>
    <clear />
    <add key="nexus" value="https://nexus.internal/repository/nuget-group/index.json" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="nexus">
      <package pattern="*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
